{
    "name": "omp-lib",
    "version": "0.1.25",
    "description": "Particl OMP-library",
    "main": "dist/omp.js",
    "types": "dist/omp.d.js",
    "files": [
        "dist/**/*"
    ],
    "scripts": {
        "build": "tsc",
        "prestart": "npm run build",
        "pretest": "tslint --project ./tsconfig.json --config ./tslint.json -t stylish '__tests__/**/*.{ts,tsx}'",
        "test": "npm-run-all -s lint test:setup test:sleep test:run",
        "test:setup": "python3 particl-test-env.py &",
        "test:sleep": "sleep 5",
        "test:run": "jest",
        "lint": "tslint --project ./tsconfig.json --config ./tslint.json -t stylish 'src/**/*.{ts,tsx}'"
    },
    "contributors": [
        {
            "name": "Kewde",
            "email": "kewde@particl.io",
            "url": "https://github.com/kewde"
        },
        {
            "name": "Cube",
            "email": "cube@particl.io"
        }
    ],
    "license": "MIT",
    "dependencies": {
        "inversify": "^4.13.0",
        "js-sha256": "^0.9.0",
        "particl-bitcore-lib": "https://github.com/kewde/particl-bitcore-lib.git",
        "reflect-metadata": "^0.1.12",
        "tslib": "^1.9.3",
        "web-request": "^1.0.7"
    },
    "devDependencies": {
        "@types/jest": "^23.1.4",
        "@types/node": "^10.5.2",
        "jest": "^23.6.0",
        "jest-cli": "^23.6.0",
        "jest-sonar-reporter": "^2.0.0",
        "nodemon": "^1.11.0",
        "sonarqube-scanner": "^2.1.2",
        "ts-jest": "^23.10.4",
        "ts-node": "^7.0.1",
        "tslint": "5.11.0",
        "tslint-clean-code": "^0.2.7",
        "tslint-sonarts": "^1.8.0",
        "typescript": "^2.4.1",
        "npm-run-all": "^4.1.5"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "<rootDir>/test/preprocessor.js"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "roots": [
            "__tests__"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "jsx",
            "json",
            "node"
        ],
        "testEnvironment": "node"
    }
}
